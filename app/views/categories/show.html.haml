%p#notice= notice
%p#error= flash[:error]

%p
  %b Category:
  = category.name

%p
  %b Product:
  - category.products.each do |product|
    = product.title

- if user_signed_in?
  = link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-sm'
  = link_to 'Back', categories_path, class: 'btn btn-primary btn-sm'

  %br
  %br

  %p
    %h4 New product
  %br

    = render 'products/form'
